# Server Configuration
PORT=3000
NODE_ENV=development
SESSION_SECRET=your-super-secret-session-key-change-this
 
# SAML Configuration
SAML_ENTRY_POINT=https://your-idp.example.com/sso
SAML_ISSUER=rfid-checkin-app
SAML_CALLBACK_URL=http://localhost:3000/auth/saml/callback
SAML_CERT=path/to/idp-cert.pem
 
# Development Mode Settings
MOCK_AUTH=true
MOCK_CSGWEBADMIN=true
 
# CSGWebAdmin API
CSGWEBADMIN_URL=https://csgwebadmin.example.com
CSGWEBADMIN_TOKEN=your-api-token
 
# Google Sheets Integration
GOOGLE_SPREADSHEET_ID=your-spreadsheet-id
GOOGLE_SERVICE_ACCOUNT_PATH=./service-account-key.json
